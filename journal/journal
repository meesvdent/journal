#!/bin/bash

file_date=$(date +'%d_%m_%Y') 
filename=$HOME'/Journal/journal_entries/'$file_date'.md'
entry_folder=$HOME'/Journal/journal_entries'

form_date=$(date +'%A %B %d')

if ! [ -d "$entry_folder" ]; then
  mkdir "$entry_folder"
fi

if test -f "$filename"; then
  echo "$filename exists."
  vim -o "$filename"
else
  echo "$filename doesn't exist."
  echo "Creating $filename ..."
  touch "$filename"
  echo "parsing template ..."
  sed -e "s/\${form_date}/$form_date/" $HOME/Journal/template.md > $filename
  echo "opening $filename ..."
  vim -o "$filename"
fi
